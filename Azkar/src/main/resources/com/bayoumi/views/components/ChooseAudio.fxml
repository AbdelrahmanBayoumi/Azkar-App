<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXSlider?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.octicons.OctIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bayoumi.controllers.components.audio.ChooseAudioController">
    <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
        <children>
            <JFXComboBox fx:id="audioBox" labelFloat="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="300.0" promptText="المؤذن" HBox.hgrow="ALWAYS">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <styleClass>
                    <String fx:value="combo-box-normal" />
                    <String fx:value="font-text-bold" />
                    <String fx:value="_17" />
                </styleClass>
            </JFXComboBox>
            <JFXButton fx:id="playButton" contentDisplay="GRAPHIC_ONLY" nodeOrientation="RIGHT_TO_LEFT" onAction="#play" style="-fx-background-color: transparent; -fx-border-color: -fx-secondary; -fx-background-radius: 15; -fx-border-width: 2; -fx-border-radius: 15;">
                <graphic>
                    <FontAwesomeIconView glyphName="PLAY" size="30" style="-fx-fill: -fx-secondary;" />
                </graphic>
                <padding>
                    <Insets bottom="5.0" left="8.0" right="14.0" top="5.0" />
                </padding>
            </JFXButton>
         <JFXButton fx:id="uploadButton" contentDisplay="GRAPHIC_ONLY" layoutX="320.0" layoutY="11.0" nodeOrientation="RIGHT_TO_LEFT" onAction="#uploadAudio" style="-fx-background-color: transparent; -fx-border-color: -fx-secondary; -fx-background-radius: 15; -fx-border-width: 2; -fx-border-radius: 15;">
            <graphic>
               <FontAwesomeIconView glyphName="PLAY" size="30" style="-fx-fill: -fx-secondary;" />
            </graphic>
            <padding>
               <Insets bottom="5.0" left="8.0" right="14.0" top="5.0" />
            </padding>
         </JFXButton>
        </children>
    </HBox>
    <HBox fx:id="prayerVolumeBox" alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
        <children>
            <JFXSlider fx:id="prayerVolumeSlider" blockIncrement="0.0" focusTraversable="false" prefWidth="300.0" value="50.0" HBox.hgrow="ALWAYS" />
            <JFXButton contentDisplay="GRAPHIC_ONLY" onAction="#muteUnmute" style="-fx-background-color: transparent; -fx-border-color: -fx-secondary; -fx-background-radius: 15; -fx-border-width: 2; -fx-border-radius: 15;">
                <graphic>
                    <OctIconView fx:id="volume" glyphName="UNMUTE" size="30" style="-fx-fill: -fx-secondary;" />
                </graphic>
                <padding>
                    <Insets bottom="6.0" left="8.0" right="8.0" top="6.0" />
                </padding>
            </JFXButton>
        </children>
    </HBox>
</HBox>
