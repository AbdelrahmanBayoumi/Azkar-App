<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bayoumi.controllers.components.audio.ChooseAudioController">
    <JFXComboBox fx:id="audioBox" labelFloat="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="RIGHT_TO_LEFT" prefWidth="300.0" promptText="المؤذن" style="-fx-font-size: 17;" styleClass="combo-box-normal" HBox.hgrow="ALWAYS">
        <cursor>
          <Cursor fx:constant="HAND" />
        </cursor>
    </JFXComboBox>
    <JFXButton fx:id="playButton" contentDisplay="GRAPHIC_ONLY" nodeOrientation="RIGHT_TO_LEFT" onAction="#play" style="-fx-background-color: transparent; -fx-border-color: -fx-secondary; -fx-background-radius: 15; -fx-border-width: 2; -fx-border-radius: 15;">
        <graphic>
          <FontAwesomeIconView glyphName="PLAY" size="30" style="-fx-fill: -fx-secondary;" />
        </graphic>
        <padding>
          <Insets bottom="5.0" left="8.0" right="14.0" top="5.0" />
        </padding>
    </JFXButton>
</HBox>
