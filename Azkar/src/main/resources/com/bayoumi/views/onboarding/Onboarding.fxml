<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane prefHeight="495.0" prefWidth="648.0" stylesheets="@../../css/style.css"
           xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.bayoumi.controllers.onboarding.OnboardingController">
   <VBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" spacing="30.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>
      <Label text="تهيئة إعدادت البرنامج">
         <font>
            <Font name="Calibri Bold" size="35.0"/>
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
         <HBox alignment="CENTER"
               style="-fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 0); -fx-background-color: -fx-secondary-text; -fx-background-radius: 20;">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <VBox alignment="CENTER" spacing="25.0" HBox.hgrow="ALWAYS">
               <Label text="أدخل الدولة والمدينة" textAlignment="CENTER" wrapText="true">
                  <font>
                     <Font name="System Bold" size="18.0"/>
                  </font>
               </Label>
               <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                  <JFXTextField fx:id="country" labelFloat="true" nodeOrientation="RIGHT_TO_LEFT"
                                promptText="الدولة" styleClass="text-field-normal" HBox.hgrow="ALWAYS"/>
                  <JFXTextField fx:id="city" labelFloat="true" nodeOrientation="RIGHT_TO_LEFT"
                                promptText="المدينة" styleClass="text-field-normal" HBox.hgrow="ALWAYS"/>
               </HBox>
            </VBox>
         </HBox>
         <VBox alignment="CENTER" spacing="20.0"
               style="-fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 0); -fx-background-color: -fx-secondary-text; -fx-background-radius: 20;">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox alignment="CENTER" spacing="15.0">
               <Label minWidth="252.0" text="طرق الحساب لصلاة الفجر والعشاء" textAlignment="CENTER"
                      wrapText="true">
                  <font>
                     <Font name="System Bold" size="18.0"/>
                  </font>
               </Label>
               <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                  <ComboBox fx:id="methodComboBox" maxWidth="1.7976931348623157E308"
                            style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 0 0 1 0; -fx-font-weight: bold;"
                            styleClass="text-field-normal">
                     <VBox.margin>
                        <Insets/>
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND"/>
                     </cursor>
                  </ComboBox>
               </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="15.0">
               <Label minWidth="252.0" text="المذهب الفقهي لصلاة العصر" textAlignment="CENTER"
                      wrapText="true">
                  <font>
                     <Font name="System Bold" size="18.0"/>
                  </font>
               </Label>
               <HBox alignment="CENTER" spacing="30.0" HBox.hgrow="ALWAYS">
                  <JFXRadioButton fx:id="standardJuristic" nodeOrientation="LEFT_TO_RIGHT"
                                  selected="true" style="-fx-font-size: 15; -fx-font-weight: bold;"
                                  styleClass="radio-button-normal" text="شافعي، مالكي، حنبلي">
                     <toggleGroup>
                        <ToggleGroup fx:id="asrJuristic"/>
                     </toggleGroup>
                  </JFXRadioButton>
                  <JFXRadioButton fx:id="hanafiRadioButton" nodeOrientation="LEFT_TO_RIGHT"
                                  style="-fx-font-size: 15; -fx-font-weight: bold;"
                                  styleClass="radio-button-normal" text="حنفي"
                                  toggleGroup="$asrJuristic"/>
               </HBox>
            </HBox>
         </VBox>
         <HBox alignment="CENTER" spacing="60.0">
            <JFXCheckBox fx:id="format24" nodeOrientation="LEFT_TO_RIGHT" style="-fx-font-weight: bold;"
                         text="نظام 24 ساعة">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </JFXCheckBox>
            <JFXCheckBox fx:id="minimizeAtStart" nodeOrientation="LEFT_TO_RIGHT" selected="true"
                         style="-fx-font-weight: bold;" text="دائما تصغير البرنامج عند البدء">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </JFXCheckBox>
         </HBox>
      </VBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <JFXButton onAction="#finish" prefWidth="140.0" style="-fx-background-radius: 10;"
                    styleClass="secondary-button" text="حفظ وإنهاء">
            <font>
               <Font name="System Bold" size="16.0"/>
            </font>
         </JFXButton>
         <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <Label style="-fx-text-fill: darkred;" text="يمكن تغيير الإعدادت من داخل البرنامج أيضًا"
                   textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="15.0"/>
               </font>
            </Label>
         </HBox>
      </HBox>
   </VBox>
</StackPane>
