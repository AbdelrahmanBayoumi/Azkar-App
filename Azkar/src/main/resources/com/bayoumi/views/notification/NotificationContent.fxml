<?xml version="1.0" encoding="UTF-8"?>


<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<AnchorPane fx:id="parent" maxWidth="500.0" minWidth="330.0" styleClass="message-box"
            stylesheets="@../../css/controlsfx-notification.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bayoumi.controllers.notification.NotificationsControlsFXController">
    <HBox fx:id="notificationBox" alignment="CENTER" layoutY="7.0" maxWidth="500.0" minWidth="330.0" spacing="20.0"
          stylesheets="@../../css/controlsfx-notification.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label fx:id="text" alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" maxWidth="330.0" text="الحمدلله"
                   textAlignment="RIGHT" wrapText="true">
                <styleClass>
                    <String fx:value="message"/>
                    <String fx:value="font-text-bold"/>
                    <String fx:value="_17"/>
                </styleClass>
            </Label>
        </VBox>
    </HBox>
    <Button fx:id="closeButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" layoutX="347.0" layoutY="3.0"
            mnemonicParsing="false" styleClass="notification-close-button" text="X" AnchorPane.leftAnchor="3.0"
            AnchorPane.topAnchor="3.0">
        <font>
            <Font name="System Bold" size="13.0"/>
        </font>
        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
        <graphic>
            <FontAwesomeIconView glyphName="CLOSE"/>
        </graphic>
    </Button>
</AnchorPane>
