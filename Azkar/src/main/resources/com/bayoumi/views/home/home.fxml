<StackPane prefHeight="535.0" prefWidth="900.0" styleClass="root" stylesheets="@../../css/style.css"
           xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.bayoumi.controllers.home.HomeController">
   <VBox prefHeight="200.0" prefWidth="100.0">
      <VBox prefHeight="85.0" style="-fx-background-color: -fx-secondary;" VBox.vgrow="ALWAYS"/>
      <VBox prefHeight="160.0" style="-fx-background-color: -fx-bg;" VBox.vgrow="ALWAYS"/>
   </VBox>
   <VBox alignment="CENTER" prefHeight="630.0" prefWidth="460.0" StackPane.alignment="CENTER">
      <VBox alignment="CENTER" spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
         </padding>
         <HBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT">
            <children>
               <Label fx:id="hijriDate" style="-fx-text-fill: -fx-secondary-text;" text="DD MMMM YYYY">
                  <font>
                     <Font name="System Bold" size="20.0"/>
