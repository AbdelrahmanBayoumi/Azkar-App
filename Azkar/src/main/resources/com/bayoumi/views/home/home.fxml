                  <VBox alignment="CENTER" minWidth="324.0" prefWidth="324.0" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox fx:id="fajrBox" alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT"
                              styleClass="box-prayer">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="20.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label fx:id="fajrText" text="الفجر">
                                       <font>
                                          <Font name="Arial Bold" size="27.0"/>
                                       </font>
                                    </Label>
