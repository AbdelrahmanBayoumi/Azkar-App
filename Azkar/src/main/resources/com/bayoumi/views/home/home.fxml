                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <MaterialDesignIconView glyphName="CLOCK" size="28"/>
                              <Label text="الساعة الان ">
                                 <font>
                                    <Font name="System Bold" size="18.0"/>
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label fx:id="timeLabel" lineSpacing="1.0" text="00:00">
                           <font>
                              <Font name="System Bold" size="24.0"/>
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0"/>
                     </padding>
                  </VBox>
                  <HBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT"
                        style="-fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 20, 0, 0, 0);"
                        styleClass="white-box">
                     <children>
                        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                           <children>
                              <Label fx:id="currentPrayerText" text="باقي على المغرب">
                                 <font>
                                    <Font size="23.0"/>
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label fx:id="remainingTimeLabel" text="00:00:00">
                           <font>
                              <Font size="25.0"/>
