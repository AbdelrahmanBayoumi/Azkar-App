            <Insets/>
         </VBox.margin>
         <children>
            <VBox alignment="TOP_CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-radius: 20;" styleClass="white-box">
