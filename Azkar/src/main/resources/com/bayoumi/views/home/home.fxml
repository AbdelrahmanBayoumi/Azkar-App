            <children>
               <HBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" styleClass="box-prayer">
                  <children>
                     <HBox alignment="CENTER_LEFT" spacing="20.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label style="-fx-font-size: 26;" text="منتصف الليل">
