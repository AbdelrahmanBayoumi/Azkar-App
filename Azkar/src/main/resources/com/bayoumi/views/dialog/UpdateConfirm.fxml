<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" spacing="10.0" styleClass="root" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bayoumi.controllers.dialog.UpdateConfirmController">
   <children>
      <HBox alignment="CENTER" style="-fx-background-color: -fx-secondary;">
         <VBox.margin>
            <Insets bottom="30.0" left="-20.0" right="-20.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="4.0" />
         </padding>
         <children>
            <Label fx:id="thereIsANewUpdate" style="-fx-text-fill: #fff;" text="يوجد تحديث جديد">
               <styleClass>
                  <String fx:value="_25" />
                  <String fx:value="font-text-bold" />
               </styleClass>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="oldVersionText" text="رقم الإصدار الحالي: ">
               <styleClass>
                  <String fx:value="font-text-medium" />
                  <String fx:value="_20" />
               </styleClass>
            </Label>
            <Label fx:id="oldVersion" style="-fx-text-fill: darkred;" text="0.0.0">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="newVersionText" text="رقم الإصدار الجديد:">
               <styleClass>
                  <String fx:value="font-text-medium" />
                  <String fx:value="_20" />
               </styleClass>
            </Label>
            <Label fx:id="newVersion" style="-fx-text-fill: green;" text="0.0.0">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="notesText" text="ملاحظات:">
               <styleClass>
                  <String fx:value="font-text-medium" />
                  <String fx:value="_20" />
               </styleClass>
            </Label>
            <TextArea fx:id="comment" editable="false" focusTraversable="false" prefHeight="100.0" promptText="لا توجد ملاحظات" styleClass="text-field-normal" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <Label fx:id="doYouWantToUpdateTheSoftware" layoutX="156.0" layoutY="30.0" text="هل تريد تحديث البرنامج ؟">
         <VBox.margin>
            <Insets bottom="10.0" top="20.0" />
         </VBox.margin>
         <styleClass>
            <String fx:value="font-text-medium" />
            <String fx:value="_20" />
         </styleClass>
      </Label>
      <HBox alignment="BOTTOM_CENTER" nodeOrientation="RIGHT_TO_LEFT" spacing="20.0">
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
         <children>
            <JFXButton fx:id="confirmBTN" defaultButton="true" focusTraversable="false" onAction="#confirmAction" prefWidth="9000.0" text="تأكيد">
               <styleClass>
                  <String fx:value="font-text-bold" />
                  <String fx:value="_20" />
               </styleClass>
            </JFXButton>
            <JFXButton fx:id="discardButton" cancelButton="true" focusTraversable="false" onAction="#discardAction" prefWidth="9000.0" text="إلغاء">
               <styleClass>
                  <String fx:value="back-button" />
                  <String fx:value="font-text-bold" />
                  <String fx:value="_20" />
               </styleClass>
            </JFXButton>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" />
   </padding>
</VBox>
